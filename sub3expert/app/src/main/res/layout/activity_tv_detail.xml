<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.TvDetail">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:id="@+id/cardgmbr"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:cardBackgroundColor="@color/asd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <ImageView
                android:id="@+id/image_desc_tv_det"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="80dp"
                android:src="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/title_desc_tv_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:gravity="start"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold|normal"
                tools:text="FILM" />
            <RelativeLayout
                android:id="@+id/lrout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_marginLeft="50dp">

                <ImageView
                    android:id="@+id/imgIcVote"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_star_kuning" />
                <TextView
                    android:layout_below="@id/imgIcVote"
                    android:id="@+id/tv_item_voteAverege_tv_det"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="vote"
                    android:foregroundGravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lrout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/imgBhs"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_public"/>
                <TextView
                    android:layout_below="@+id/imgBhs"
                    android:id="@+id/tv_item_bahasa_film_det"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:text="bhs"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lrout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="330dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:id="@+id/imgIcTime"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_timer_kuning"/>
                <TextView
                    android:layout_below="@id/imgIcTime"
                    android:id="@+id/tv_item_voteCount_tv_det"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:text="count"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txSud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/realesed"
            android:textSize="14sp"
            android:textStyle="bold|normal"
            android:textColor="@android:color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toEndOf="@id/cardgmbr"
            app:layout_constraintStart_toStartOf="@id/cardgmbr"
            app:layout_constraintTop_toBottomOf="@id/cardgmbr"/>

        <TextView
            android:id="@+id/tv_item_realesed_tv_det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:background="@color/bgtxt"
            android:textStyle="italic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toEndOf="@+id/txSud"
            app:layout_constraintStart_toStartOf="@+id/txSud"
            app:layout_constraintTop_toBottomOf="@+id/txSud"
            tools:text="rilis" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/txdsc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold|normal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toEndOf="@id/tv_item_realesed_tv_det"
            app:layout_constraintStart_toStartOf="@id/tv_item_realesed_tv_det"
            app:layout_constraintTop_toBottomOf="@id/tv_item_realesed_tv_det" />
        <TextView
            android:id="@+id/desc_det_tv_det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgtxt"
            android:ellipsize="end"
            android:gravity="start"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toEndOf="@id/txdsc"
            app:layout_constraintStart_toStartOf="@id/txdsc"
            app:layout_constraintTop_toBottomOf="@id/txdsc"
            tools:text="Deskripsi" />
        <ProgressBar
            android:id="@+id/progress_bar_tv_det"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/txdsc"
            app:layout_constraintStart_toStartOf="@id/txdsc"
            app:layout_constraintTop_toBottomOf="@id/txdsc"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>